{
  "name": "Chatwork completion",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "chatwork input completion",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "scripts/popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/listbox.js",
        "scripts/app.js"
      ],
      "css": [
        "styles/app.css"
      ],
      "matches": [
        "https://*.chatwork.com/*",
        "http://local.work/*"
      ]
    }
  ],
  "icons": {
    "48": "images/icon48.png"
  }
}

