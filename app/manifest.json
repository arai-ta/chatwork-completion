{
  "name": "Chatwork completion",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "chatwork input completion",
  "permissions": [
    "tabs",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "dist/index.bundle.js"
      ],
      "css": [
        "styles/app.css"
      ],
      "matches": [
        "https://*.chatwork.com/*",
        "http://local.work/*"
      ]
    }
  ],
  "icons": {
    "48": "images/icon48.png"
  }
}

